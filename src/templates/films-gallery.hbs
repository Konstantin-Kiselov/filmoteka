{{#each this}}
  <li class='film-gallery'>
     {{#if poster_path}}
    <img
      src='https://image.tmdb.org/t/p/w500{{poster_path}}'
      alt='{{title}}'
      data-action={{id}}
      class='img-card'
    />
     {{else}}
    <img 
      src='https://upload.wikimedia.org/wikipedia/commons/6/65/No-Image-Placeholder.svg'
      class='img-card'
    />
    {{/if}}

    <div class='film-card'>
      <h3 class='film-title'>{{original_title}}</h3>

      <p class='film-genres'>{{#each genres_ids}}
          <span class='film-text genre'> {{name}}</span>
        {{/each}}
        {{releaseDate}}
        |
        <span class='vote-average'>{{vote_average}}</span>
      </p>
    </div>
  </li>
{{/each}}