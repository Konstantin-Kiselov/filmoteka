{{#each this}}
<li class="film-gallery">
    {{#if poster_path}}
    <img src='https://image.tmdb.org/t/p/w500{{poster_path}}' alt='{{ title }}' data-action={{id}} class="img-card">
    {{else}}
        <img src='https://upload.wikimedia.org/wikipedia/commons/6/65/No-Image-Placeholder.svg' class="img-card">
    {{/if}}
    <div class="film-card">
        <h3 class="film-title">{{original_title}}</h3>


        {{!-- вывести жанры--{{vote_average}} отображается только в My Library! --}}
        <p>
            {{#each genre_ids}}
            <span class="film-name"> {{name}}
                {{/each}}
            </span>
            <span class="film-release">| {{release_date}}</span>
            <span class="film-average">{{vote_average}}</span>
        </p>
    </div>
</li>
{{/each}}